{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}
    {% if app.user %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ app.user.password }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ app.user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ app.user.lastname }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ app.user.number }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-info">Retour</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-dark" >Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
