{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

    {% if app.user %}
<div class="container register">
    <h1 class="display-4">Profil</h1>
    <div class="row modif_profil">
        <div class="col-6" style="width: 36rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ app.user.firstname |capitalize }}</h5>
                    <p class="card-text">
                        <label>E-mail : </label> {{ app.user.email }}<br>
                        <label>Prénom : </label> {{ app.user.firstname }}<br>
                        <label>Nom : </label> {{ app.user.lastname }}<br>
                        <label>Téléphone : </label> {{ app.user.number }}<br>
                        <label>Role : </label>{% if is_granted('ROLE_ADMIN')  %} Admin {% else %} Utilisateur {% endif %}
                    </p>
                </div>     
        </div>
    

    {% endif %}
    {% if (app.user.id==user.id) %}
        <div class="col-6">
    {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <!--<a href="{{ path('user_index') }}" class="btn btn-info">Retour</a>-->

    {{ include('user/_delete_form.html.twig') }}
    {% else %}
        <div>
            Accès refusé !
        </div>   
    {% endif %}
        </div>
    </div>
</div>


{% endblock %}
