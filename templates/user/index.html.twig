{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% if app.user %}
<div class="container">
    <h1>Profil</h1>
    <div class="row">
        <div class="col-5">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ app.user.firstname |capitalize }}</h5>
                    <p class="card-text">
                        <label>E-mail : </label> {{ app.user.email }}<br>
                        <label>Prénom : </label> {{ app.user.firstname }}<br>
                        <label>Nom : </label> {{ app.user.lastname }}<br>
                        <label>Téléphone : </label> {{ app.user.number }}<br>
                        <label>Role : </label>{% if is_granted('ROLE_ADMIN')  %} Admin {% else %} Utilisateur {% endif %}
                    </p>
                </div>
            </div>
        </div>
            <div class="col-5">
            <div class="card" style="width: 30rem;height: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">Modifier</h5>
                    <p class="card-text">
                        <iframe width="100%" height="250" src="{{ app.user.id }}/edit"></iframe>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
    {% endif %}
{% endblock %}
