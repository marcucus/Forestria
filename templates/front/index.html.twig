    </div>

</section>
    <section class="category">

    <h1 class="heading">Choisir un parcour</h1>

    <div class="box-container">
            
        {% for parcour in parcours %}
        
    
        <div class="box">
            

                <a href="{{ path('parcours_show', {'id': parcour.id}) }}" class="btn">
                            
                        <img src="{{asset('images/upload/'~parcour.imageName)}}"  alt="Image du parcour">
                            
                            <h3> {{ parcour.name }}</h3>
                            <p> {{ parcour.description }}</p>
                    
                    </a>
                
        </div>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            
            
            <div class="navigation">
            {{ knp_pagination_render(parcours) }}
        </div>

    </div>
    </section>
             
   
{% endblock %}