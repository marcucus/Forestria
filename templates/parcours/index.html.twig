{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}
    {% if app.user %}
<div class="container">
    <h1>Parcours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.name }}</td>
                <td>{{ parcour.description }}</td>
                <td>
                    <a href="{{ path('parcours_show', {'id': parcour.id}) }}" class="btn btn-dark">+</a>
                    <a href="{{ path('parcours_edit', {'id': parcour.id}) }}" class="btn btn-info">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="navigation">
            {{ knp_pagination_render(parcours) }}
        </div>
    <a href="{{ path('parcours_new') }}" class="btn btn-success">Nouvelle catégorie</a>

    {% else %}
        <div>Accès refusé, vous n'êtes pas connecté</div>
    {% endif %}
    </div>
{% endblock %}
