{% extends 'base.html.twig' %}

{% block title %}Parcours{% endblock %}

{% block body %}
    {{ include('header.html.twig') }}
    {% if app.user %}
<div class="container">
    <h1>Parcours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parcour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ parcour.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ parcour.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('parcours_index') }}" class="btn btn-info">Retour</a>

    <a href="{{ path('parcours_edit', {'id': parcour.id}) }}" class="btn btn-dark" >Modifier</a>

    {{ include('parcours/_delete_form.html.twig') }}
</div>
    {% endif %}
{% endblock %}
